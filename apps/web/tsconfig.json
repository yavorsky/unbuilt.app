{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "incremental": true,
    "module": "ESNext",
    "target": "es6",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "extends": "../../tsconfig.json",
  "include": [
    "src",
    "scripts",
    "supabase/database.types.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ]
}
