{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "incremental": true,
    "module": "CommonJS",
    "target": "ES2022",
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./build",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strictNullChecks": true
  },
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules"],
  "include": ["src"]
}
